<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <Button
            android:id="@+id/btnToast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Toast y navegar a segunda view"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnViewThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Toast y navegar a tercer view"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnViewGridActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="GridView"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnViewRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="RecyclerView"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnViewCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="CardView"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnViewRecyclerCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="RecyclerView con CardView"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="ListView"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnRealm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Realm (Persistencia de Datos)"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnFragments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Fragments"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Tabs"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnGoogleMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Google Maps"
            android:textColor="#FFFFFF"/>

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_navigation_drawer"
        app:menu="@menu/nav_options" />


</androidx.drawerlayout.widget.DrawerLayout>